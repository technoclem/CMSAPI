{  
  "ConnectionStrings": {
    "CMSConnection": "Data Source=.;Initial Catalog=CustomerDB;Persist Security Info=True;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True; User ID=sa;Password=@amen2030#"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/CMSLog-.txt",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
          "rollingInterval": "Day",
          "outputTemplate": "[ {Timestamp:dd/MM/yy HH:mm:ss} [{Level}]: {SourceContext} {Message}  Exception: {Exception} ]{NewLine}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
  }
}
